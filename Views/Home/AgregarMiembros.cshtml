@{
    ViewData["Title"] = "Login";
}

<section class="login-container">
    <div class="login-box">
        <h1>Iniciar Sesión</h1>

        @if (ViewBag.Error == true)
        {
            <p class="error-msg">Verifique su usuario y contraseña</p>
        }

        <form action='@Url.Action("ponerMiembroEnBD", "Home")' method="POST" enctype="multipart/form-data">
            <input type="text" name="nombre" placeholder="Nombre" max="50" required />
            <input type="text" name="usuario" placeholder="Usuario" max="50" required />
            <input type="password" name="contraseña" placeholder="Contraseña" required />
            <input type="text" name="frase" placeholder="Frase" max="50" required />
            <input type="text" name="hobby" placeholder="Hobby" max="50" required />
            <input type="text" name="profeFav" placeholder="Profesor Favorito" max="50" required />
            <input type="text" name="peliculaFav" placeholder="Película Favorita" max="50" required />
            <input type="text" name="foto" placeholder="Foto (link a la imagen)" max="150" required />
            <select name="IDgrupo" required>
                <option value="" disabled selected>Seleccioná un grupo</option>
                <option value="1">FRANcia</option>
                <option value="2">BrunoBerman</option>
                <option value="3">Las Sinfonías</option>
            </select>


            <input type="submit" value="Crear Miembro" class="btn-login" />
        </form>
    </div>
</section>
