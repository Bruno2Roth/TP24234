<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Introducción a base de datos
</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <header>

        <div class="title">El flamante TP de Fran y Bruno (y Tobi)</div>
        <nav class="header-nav">
            <a href='@Url.Action("CerrarSesión", "Home")'>Cerrar Sesión</a>
            <a href='@Url.Action("AgregarMiembros", "Home")'>Agregar Miembro</a>
            <a href='@Url.Action("Miembros", "Home")'>Mi Grupo</a>

        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year - Introducción a base de datos

    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
